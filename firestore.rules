
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que qualquer pessoa crie (envie) um orçamento.
    // A leitura e a exclusão são restritas para proteger os dados.
    match /orcamentos/{budgetId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Permite que usuários autenticados gerenciem colaboradores.
    match /colaboradores/{colaboradorId} {
      allow read, write: if request.auth != null;
    }

    // Permite que todos leiam o conteúdo do site, mas apenas usuários
    // autenticados (admins) podem escrever.
    match /pageContent/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
