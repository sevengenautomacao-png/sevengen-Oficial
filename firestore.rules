rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que qualquer pessoa crie (envie) um orçamento,
    // mas restringe a leitura, atualização e exclusão a usuários autenticados.
    match /orcamentos/{budgetId} {
      allow read, update, delete: if request.auth != null;
      allow create: if true;
    }
  }
}
